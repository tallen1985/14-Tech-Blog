<div
  class="d-flex flex-column w-80 border border-dark my-3 blogPost"
  data-id="{{id}}"
>
  <div
    class="container-fluid bg-dark text-white d-flex flex-row flex-wrap justify-content-between align-items-center"
  >
    <div class="p-2 entryTitle"><h2>{{title}}</h2></div>
    <div class="px-2 text-light entryInfo">Created
      {{#if user.user_name}}
        By
        <b>{{user.user_name}}</b>
      {{/if}}
      on
      {{formatDate createdAt}}</div>
  </div>
  <div class="container-fluid p-3">
    {{content}}
  </div>
  <div>
    {{> comment}}
  </div>
</div>