{{#each comments}}
  <div
    class="container-fluid text-dark d-flex flex-row justify-content-between align-items-center commentSection"
  >
    <div class="p-1 ms-3">
      {{content}}
    </div>
    <div class="text-end entryInfo">
      Created By
      <b>{{user.user_name}}</b>
      on
      {{formatDate createdAt}}
    </div>
  </div>

{{/each}}